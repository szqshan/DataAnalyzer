# Anthropic API 配置
# 请在本地设置您的 API Key
ANTHROPIC_API_KEY=

# Flask 配置
FLASK_ENV=development
FLASK_DEBUG=true

# 数据库配置
DEFAULT_DB_PATH=./data/analysis.db
DEFAULT_TABLE_NAME=data_table

# 文件上传配置
MAX_FILE_SIZE=100MB
UPLOAD_FOLDER=./uploads
REPORTS_FOLDER=./reports

# 服务器配置
HOST=0.0.0.0
PORT=5000

MODEL_NAME=claude-3-5-sonnet-20241022

# Title Generation
TITLE_MAX_LENGTH=16
TITLE_MAX_TOKENS=30
TITLE_TEMPERATURE=0.3
TITLE_GENERATION_MODEL=claude-3-5-sonnet-20241022

# Anthropic API Base URL (可选)
# ANTHROPIC_BASE_URL=https://api.anthropic.com
